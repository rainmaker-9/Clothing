            <script>
                const colors = document.querySelectorAll('[name="colour"]')

                if(colors.length) {
                    colors.forEach(color => color.addEventListener('click', e => {
                        if(e.target.checked) {
                            const filtered = Array.from(colors).filter(c => c.value !== color.value)
                            filtered.forEach(item => item.classList.remove('checked'))
                            const ele = e.target.classList.add('checked')
                        } else {
                            const ele = e.target.classList.remove('checked')
                        }
                        
                    }))
